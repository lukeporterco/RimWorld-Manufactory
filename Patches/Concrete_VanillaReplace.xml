<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <!-- Keep vanilla Concrete def, only swap specific fields -->

  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/TerrainDef[defName="Concrete"]/texturePath</xpath>
    <value>
      <texturePath>Terrain/Surfaces/Manufactory_Concrete</texturePath>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/TerrainDef[defName="Concrete"]/label</xpath>
    <value>
      <label>manufactory concrete</label>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/TerrainDef[defName="Concrete"]/description</xpath>
    <value>
      <description>Concrete optimized for factory construction.</description>
    </value>
  </Operation>

</Patch>
