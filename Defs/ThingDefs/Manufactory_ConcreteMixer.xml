<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="BuildingBase">
    <defName>Manufactory_ConcreteMixer</defName>
    <label>concrete mixer</label>
    <description>Stores concrete mix and keeps it workable by reversing setting while stored.</description>
    <thingClass>Manufactory.ConcreteMix.Building_ConcreteMixer</thingClass>
    <graphicData>
      <texPath>Things/Building/Manufactory/ConcreteMixer/Concrete_Mixer</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1.2,2.4)</drawSize>
      <color>(0.58,0.58,0.58)</color>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>15</pathCost>
    <fillPercent>0.5</fillPercent>
    <surfaceType>Item</surfaceType>
    <tickerType>Normal</tickerType>
    <size>(1,2)</size>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <building>
      <isEdifice>false</isEdifice>
      <fixedStorageSettings>
        <filter>
          <thingDefs Inherit="False">
            <li>Manufactory_ConcreteMix</li>
          </thingDefs>
        </filter>
      </fixedStorageSettings>
      <defaultStorageSettings>
        <priority>Preferred</priority>
        <filter>
          <thingDefs Inherit="False">
            <li>Manufactory_ConcreteMix</li>
          </thingDefs>
        </filter>
      </defaultStorageSettings>
    </building>
    <statBases>
      <MaxHitPoints>180</MaxHitPoints>
      <WorkToBuild>1800</WorkToBuild>
      <Mass>15</Mass>
      <Flammability>0</Flammability>
      <Beauty>-2</Beauty>
    </statBases>
    <costList>
      <Steel>60</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <designationCategory>Production</designationCategory>
    <researchPrerequisites>
      <li>Stonecutting</li>
    </researchPrerequisites>
    <inspectorTabs>
      <li>ITab_Storage</li>
    </inspectorTabs>
    <comps>
      <li Class="CompProperties_Forbiddable" />
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>50</basePowerConsumption>
      </li>
      <li Class="Manufactory.ConcreteMix.CompProperties_ConcreteMixerFermenter">
        <batchDurationTicks>2500</batchDurationTicks>
        <mixPerBatch>20</mixPerBatch>
        <chunkPerBatch>1</chunkPerBatch>
        <chemfuelPerBatch>5</chemfuelPerBatch>
        <maxInputChunks>5</maxInputChunks>
        <maxInputChemfuel>25</maxInputChemfuel>
        <maxMixCapacity>200</maxMixCapacity>
        <outputDefName>Manufactory_ConcreteMix</outputDefName>
      </li>
    </comps>
  </ThingDef>
</Defs>
